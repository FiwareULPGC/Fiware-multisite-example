echo "5: ++++++++++++++++++++"

url="/v1/unsubscribeContext"
payload='<?xml version="1.0"?>
<unsubscribeContextRequest>
  <subscriptionId>'$SUB_ID'</subscriptionId>
</unsubscribeContextRequest>'
orionCurl --url "$url" --payload "$payload"

echo "6: ++++++++++++++++++++"

url="/v1/updateContext"
payload='<?xml version="1.0"?>
<updateContextRequest>
