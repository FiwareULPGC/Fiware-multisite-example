# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
XML throttling

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: +++++++++++++++++++++++++++++"

url="/v1/subscribeContext"
payload='<?xml version="1.0"?>
<subscribeContextRequest>
  <entityIdList>
    <entityId type="Room" isPattern="false">
      <id>OfficeRoom</id>
    </entityId>
  </entityIdList>
  <reference>http://localhost:${LISTENER_PORT}/notify</reference>
  <throttling>PT5H</throttling>
</subscribeContextRequest>'
orionCurl --url "$url" --payload "${payload}"
echo
echo "2: +++++++++++++++++++++++++++++"
# Bad throttling syntax
#INVALID_XML
url="/v1/subscribeContext"
payload='<?xml version="1.0"?>
<subscribeContextRequest>
  <entityIdList>
    <entityId type="Room" isPattern="false">
      <id>OfficeRoom</id>
    </entityId>
  </entityIdList>
  <reference>http://localhost:${LISTENER_PORT}/notify</reference>
  <throttling>PT5R</throttling>
</subscribeContextRequest>'
orionCurl --url "$url" --payload "${payload}"
echo
--REGEXPECT--
1: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 227
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<subscribeContextResponse>
  <subscribeResponse>
    <subscriptionId>REGEX([0-9a-f]{24})</subscriptionId>
    <duration>PT24H</duration>
    <throttling>PT5H</throttling>
  </subscribeResponse>
</subscribeContextResponse>

2: +++++++++++++++++++++++++++++
HTTP/1.1 200 OK
Content-Length: 273
Content-Type: application/xml
Date: REGEX(.*)

<?xml version="1.0"?>
<subscribeContextResponse>
  <subscribeError>
    <errorCode>
      <code>400</code>
      <reasonPhrase>Bad Request</reasonPhrase>
      <details>invalid payload: syntax error in throttling string</details>
    </errorCode>
  </subscribeError>
</subscribeContextResponse>

--TEARDOWN--
brokerStop CB
dbDrop CB
