--NAME--
XML Parse ContextEntityAttributes

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--
echo "1: ++++++++++++++++++++"
# Make a registration using conv op /v1/registry/contextEntities/ENTITY_ID/attributes
url="/v1/registry/contextEntities/ENTITY_ID/attributes"
payload='<?xml version="1.0" encoding="UTF-8"?>
<registerProviderRequest>
  <metadata>
    <contextMetadata>
      <name>ID</name>
      <type>string</type>
      <value>1110</value>
    </contextMetadata>
    <contextMetadata>
      <name>cm2</name>
      <type>string</type>
      <value>XXX</value>
    </contextMetadata>
  </metadata>
  <duration>PT1H</duration>
  <providingApplication>http://kz.tid.es/abc</providingApplication>
</registerProviderRequest>'
orionCurl --url "$url" --payload "${payload}"

REG_ID=$(echo "$_response" | grep registrationId | awk -F '>' '{print $2}' | awk -F '<' '{print $1}' | grep -v '^$' )

# Make a discovery to see that the registration went OK
echo "2: ++++++++++++++++++++"
url="/v1/registry/discoverContextAvailability"
payload='<?xml version="1.0"?>
  <discoverContextAvailabilityRequest>
    <entityIdList>
      <entityId type="" isPattern="true">
        <id>ENTITY_ID</id>
      </entityId>
    </entityIdList>
  </discoverContextAvailabilityRequest>'
orionCurl --url "$url" --payload "${payload}"

# Modify the first registration
echo "3: ++++++++++++++++++++"

url="/v1/registry/contextEntities/ENTITY_ID/attributes"
payload='<?xml version="1.0" encoding="UTF-8"?>
<registerProviderRequest>
  <metadata>
    <contextMetadata>
      <name>ID</name>
      <type>string</type>
      <value>1111</value>
    </contextMetadata>
    <contextMetadata>
      <name>cm2</name>
      <type>string</type>
      <value>YYY</value>
    </contextMetadata>
  </metadata>
  <duration>PT2H</duration>
  <providingApplication>http://kz.tid.es/abc2</providingApplication>
  <registrationId>'$REG_ID'</registrationId>
</registerProviderRequest>'
orionCurl --url "$url" --payload "${payload}"

echo "4: ++++++++++++++++++++"
# Now discover that very registration again to see the change
url="/v1/registry/discoverContextAvailability"
payload='<?xml version="1.0"?>
  <discoverContextAvailabilityRequest>
    <entityIdList>
      <entityId type="" isPattern="true">
        <id>ENTITY_ID</id>
      </entityId>
    </entityIdList>
  </discoverContextAvailabilityRequest>'
orionCurl --url "$url" --payload "${payload}"

echo "5: ++++++++++++++++++++"
# Now try the GET method
orionCurl --url "/v1/registry/contextEntities/ENTITY_ID/attributes"

echo "6: ++++++++++++++++++++"
# And a GET that fails
orionCurl --url "/v1/registry/contextEntities/ENTITY_ID2/attributes"

echo "7: ++++++++++++++++++++"
# DELETE and PUT should give errors
orionCurl --url "/v1/registry/contextEntities/ENTITY_ID/attributes" -X "DELETE"

echo "8: ++++++++++++++++++++"
url="/v1/registry/contextEntities/ENTITY_ID/attributes"
payload='<?xml version="1.0" encoding="UTF-8"?>
<registerProviderRequest>
  <metadata>
    <contextMetadata>
      <name>ID</name>
      <type>string</type>
      <value>1111</value>
    </contextMetadata>
    <contextMetadata>
      <name>cm2</name>
      <type>string</type>
      <value>YYY</value>
    </contextMetadata>
  </metadata>
  <duration>PT2H</duration>
  <providingApplication>http://kz.tid.es/abc2</providingApplication>
</registerProviderRequest>'
orionCurl --url "$url" --payload "${payload}" -X "PUT"

echo "9: ++++++++++++++++++++"

